
<% 
const type = 'books'; 
const linkPrefix =systemConfig.prefixAdmin + `/${type}/`;
%>


<form role="form" action="<%= linkPrefix %>upload/" method="POST" enctype="multipart/form-data">

    <% if(errors) {%>
        <div class="alert defeat add">
            <% errors.forEach((errors) => { %>
            <span id = "<%= errors.param%>"><%= errors.msg%> </span><br>
            <%})%>
        </div>
    <%} %> 

    <div class="form-group">
        <label>File</label>
        <input type="file" name="books" multiple onchange="readURL(this);">
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit</button> 	
    </div>
</form>

<div id="preview-images">
	
</div>

<script>
	
     function readURL(input) {
		let preview = document.getElementById("preview-images");

		let n = input.files.length;
		for (let i = 0; i < n; i++){
			let reader = new FileReader();
			reader.onload = function(event) {
				let img = document.createElement("img");
				img.style.width = "auto";
				img.style.height = "100px";
				img.style.padding = "10px";
				img.src = event.target.result;
				preview.appendChild(img);
			};
            reader.readAsDataURL(input.files[i]);
		}
	}

</script>
