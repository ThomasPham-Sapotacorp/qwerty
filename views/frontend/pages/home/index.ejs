<% 
	const BannerUpload  = 'upload/banners/';
    const BookUpload    = 'upload/books/';
    const linkPrefix	= `/`+systemConfig.prefixFrontend ;
%> 

    
    <div class="home_banner">
        <div class="container">
            <div>
                <% include ./../../elements/vertical-menu.ejs %>
                <div class="banner">
                    <div class="owl_banner owl-carousel owl-theme">
                        <% itemBanner.forEach( (item) => { %>
                            <div class="item">
                                <img src= <%=BannerUpload + item.image%> alt="<%=item.name%>">
                            </div>
                        <% }) %> 
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="mini_banner">
        <div class="container">
            <% for(let i = 0; i < 4; i++){ %>
                <div class="item">
                    <a href="/">
                        <img src= <%=BannerUpload + itemBanner[i].image%> alt="<%=itemBanner[i].name%>">
                    </a>
                </div>
            <% } %>   
        </div>
    </div>
    <div class="menu_icon">
        <div class="container">
            <div class="item_icon"></div>
            <div class="item_icon"></div>
            <div class="item_icon"></div>
            <div class="item_icon"></div>
            <div class="item_icon"></div>
            <div class="item_icon"></div>
            <div class="item_icon"></div>
            <div class="item_icon"></div>
            <div class="item_icon"></div>
            <div class="item_icon"></div>
        </div>
    </div>
    
    <div class="category">
        <div class="category_header">
            <i class="fas fa-book-reader whiteiconcolor fa-3x"></i>
            <span>Top Sale</span>
        </div>
        <div class="container">
            <div class="owl_category owl-carousel owl-theme">
                
                <% books.forEach( (itemBook , i) => { %>
                    <% if(itemBook.discount >= 20){ %>
                        <div class="item_show">
                            <div class="discount">
                                <span class="discount-detail"><%=itemBook.discount%>%</span>
                            </div>
                            <a href="<%= '/' + itemBook.slug%>">
                                <img src= <%=BookUpload + itemBook.thumbnail[0]%> alt="<%=itemBook.name%>">
                                <h3><%=itemBook.name%></h3>
                                <div class="price">
                                    <strong class="currentPrice price_js"><%=itemBook.price * (100 - itemBook.discount) / 100 %></strong>
                                    <span class="price_js"><%=itemBook.price%> đ</span>
                                </div>
                                <div class="ratingresult">
                                    <i class="fas fa-star yellowiconcolor"></i>
                                    <i class="fas fa-star yellowiconcolor"></i>
                                    <i class="fas fa-star yellowiconcolor"></i>
                                    <i class="fas fa-star yellowiconcolor"></i>
                                    <i class="fas fa-star yellowiconcolor"></i>
                                    <span>(0)</span>
                                </div>
                            </a>
                        </div>
                    <% } %> 
                <% }) %>  
            </div>
        </div>
        <div class="tabs-xem-them">
            <a href="/">Xem Thêm</a>
        </div>
    </div>
    
