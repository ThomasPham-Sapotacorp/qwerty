<% SidebarMenu = (sidebar, books='') =>{
    let xhtml = ``
    let xhtml_list = ``
    
    let items = sidebar.items;
    let option = sidebar.type;
    
    if (option == 'class' && items[0]){
        xhtml = `<a href="/${items[0].class.slug}" class="selected">${items[0].class.name}</a>`
    }
    else if(option == 'group' && items[0]){
        xhtml = `<a href="${items[0].group.class.slug}">${items[0].group.class.name}</a>
                <a href="${items[0].group.class.slug}/${items[0].group.slug}"class="selected">${items[0].group.name}</a>`
    }
    else if(option == 'category' && items[0] ){
        xhtml = `<a href="${items[0].group.class.slug}">${items[0].group.class.name}</a>
                <a href="${items[0].group.class.slug}/${items[0].group.slug}">${items[0].group.name}</a>`
    }

////////////////////////////////////////////
    
   
    items.forEach((item) => {
        if (books[0].category.name == item.name && option == 'category'){
            xhtml_list += `<li><a class="selected" href="/${item.group.class.slug}/${item.group.slug}/${item.slug}">${item.name}</a></li>`
        }else if (option = 'class' && item.class){
            xhtml_list += `<li><a href="${item.class.slug}/${item.slug}">${item.name}</a></li>`
        }else if (option = 'group'){
            xhtml_list += `<li><a href="/${item.group.class.slug}/${item.group.slug}/${item.slug}">${item.name}</a></li>`
        }
        
    })

///////////////////////////////////////////


    return `<div class="category_menu">
                <div>
                    <h3>Nhóm sản phẩm</h3>
                </div>
                <div class="category_list">
                    ${xhtml}
                    <ul>
                        ${xhtml_list}
                    </ul>
                </div>
                <div class="xem_them">
                    <a href="">Xem thêm</a>
                </div>
            </div>

        <div class="category_menu">
            <div>
                <h3>Giá</h3>
            </div>
            <div class="category_list">
                <form id='form-price'>
                    <div class="pr-ip">
                        <input type="text" id="price_gte" name="price_gte" maxlength="14" placeholder="Min" class="price-input" value="">
                        
                        <input type="text" id="price_lte" name="price_lte" maxlength="14" placeholder="Max" class="price-input" value="">
                    </div>
                </form>           
            </div>
            <div class="xem_them">
                <a id="submit-price" class="submit btn">Tìm</a>
            </div>
        </div>`
}
%>

